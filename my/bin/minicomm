#!/bin/bash

filename=minicom$(my_date).$1.log

if [[ "$2" == "--ssh" ]]; then
	echo "minicom -C $filename -D /dev/ttyUSB0 -c on && exit" | xclip -selection c
	ssh "$3"
	scp $3:~/$filename ~/log/minicom/
	ssh "$3" "rm ~/$filename"
	exit $?
fi

sudo minicom -C ~/log/minicom/$filename -D /dev/ttyUSB0 -c on

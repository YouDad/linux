# resize window (you can also use the mouse for that)
bindsym $win+r mode "resize"
mode "resize" {
	bindsym h resize shrink width 1 px or 1 ppt
	bindsym j resize grow height 1 px or 1 ppt
	bindsym k resize shrink height 1 px or 1 ppt
	bindsym l resize grow width 1 px or 1 ppt
	bindsym Left resize shrink width 1 px or 1 ppt
	bindsym Down resize grow height 1 px or 1 ppt
	bindsym Up resize shrink height 1 px or 1 ppt
	bindsym Right resize grow width 1 px or 1 ppt
	bindsym Return mode "default"
	bindsym Escape mode "default"
}

set $print_mode print
bindsym $win+ctrl+p mode "$print_mode"
mode "$print_mode" {
	bindsym $win+ctrl+q exec --no-startup-id "bash ~/bin/xrandr-q.sh"
	bindsym $win+ctrl+w exec --no-startup-id "bash ~/bin/xrandr-w.sh"
	bindsym $win+ctrl+e exec --no-startup-id "bash ~/bin/xrandr-e.sh"
	bindsym $win+ctrl+p exec --no-startup-id "bash ~/bin/xrandr-p.sh"

	bindsym Return mode "default"
	bindsym Escape mode "default"
}

# Set shut down, restart and locking features
set $mode_system (l)ock, (e)xit, switch_(u)ser, (s)hutdown, (h)ibernate, (r)eboot
bindsym $win+ctrl+Escape mode "$mode_system"
mode "$mode_system" {
	bindsym l exec --no-startup-id i3exit lock, mode "default"
	bindsym s exec --no-startup-id i3exit shutdown, mode "default"
	bindsym u exec --no-startup-id i3exit switch_user, mode "default"
	bindsym e exec --no-startup-id i3exit logout, mode "default"
	bindsym h exec --no-startup-id i3exit hibernate, mode "default"
	bindsym r exec --no-startup-id i3exit reboot, mode "default"

	# exit system mode: "Enter" or "Escape"
	bindsym Return mode "default"
	bindsym Escape mode "default"
}

set $F1System dict
bindsym $win+ctrl+shift+F1 mode "$F1System"
mode "$F1System" {
	bindsym z      floating toggle
	bindsym g      exec "adb shell input tap 700 2200"
	bindsym m      floating toggle exec "adb shell input tap 400 2200"
	bindsym Return mode "default"
	bindsym Escape mode "default"
}

